{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [ "es6", "dom" ],
    "target": "es5",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "newLine": "LF",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true
  },
  "exclude": [
    "compiled",
    "dist",
    "docs",
    "node_modules",
    "src/frameworks/material-design"
  ],
  "angularCompilerOptions": {
    "genDir": "compiled"
  }
}
